<Window x:Class="TasksWPF.TaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksWPF"
        mc:Ignorable="d"
        Title="TaskDialog" Height="193.5" Width="501.5" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Label Content="Tytul zadania" HorizontalAlignment="Left" Margin="33,27,0,0" VerticalAlignment="Top" Width="133"/>
        <Label Content="Termin zadania" HorizontalAlignment="Left" Margin="33,79,0,0" VerticalAlignment="Top" Width="133"/>
        <TextBox x:Name="titleTask" HorizontalAlignment="Left" Height="23" Margin="166,31,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="296"/>
        <DatePicker x:Name="dateTask" HorizontalAlignment="Left" Margin="166,79,0,0" VerticalAlignment="Top" Width="296"/>
        <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="113,123,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="OkButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="288,123,0,0" VerticalAlignment="Top" Width="74" IsCancel="True"/>

    </Grid>
</Window>
